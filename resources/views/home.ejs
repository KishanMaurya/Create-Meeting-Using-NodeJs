<section class="home">
    <div class="container">
        <div class="row mt-md-5">
            <div class="col-md-12">
                <h4 class="">All Metting Listing  Here</h4>
            </div>
        </div>
        <hr>
        <div class="row mt-md-5">
            <% meeting.forEach((meeting)=>{
                %>
                <div class="col-md-3 mb-5">
                        

                        <div class="card shadow hieght h-100 border-0">
                            <img class="card-img-top" src="https://mdbootstrap.com/img/Mockups/Lightbox/Thumbnail/img%20(67).jpg" width="306" height="226" alt="Card image cap">
                            <div class="card-body">
                                <div class="rows">
                                    <div class="col1">
                                        <span class="tomato"><%= moment(meeting.createDate).format('MMM Do ') %></span>
                                    </div>
                                    <div class="col2">
                                        <span class="card-title dark"><%= meeting.meetingName %></span>
                                    </div>
                                </div>
                                <hr>
                              <p class="card-text "><%= meeting.description %></p>
                              <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= meeting.startTime %>PM </button>
                                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= meeting.endTime %>PM</button>
                                </div>
                                <small class="text-muted"><%= moment(meeting.createDate).format('ddd Do MMM');  %></small>
                              </div>
                            </div>
                          </div>
                    </div>
                <%
            }) %>
            
        </div>
    </div>
</section>